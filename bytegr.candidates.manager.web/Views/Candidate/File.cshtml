@model bytegr.candidates.manager.data.Dtos.CandidateDto
@using Microsoft.AspNetCore.Http.Extensions


<h1 style="font-weight:bolder;font-size:68px">File</h1>
<p style="margin-top:0px; margin-left:10px;margin-bottom:20px;font-size:x-small">@Context.Request.GetDisplayUrl()</p>


<form asp-action="File" method="post" enctype="multipart/form-data">
    <!-- Id -->
    <div class="row form-group">
        <div class="col-md-2 col-md-offset-2">
            <label asp-for="Id"></label>
        </div>
        <div class="col-md-2">
            <input class="form-control" asp-for="Id" readonly />
        </div>
    </div>



    <!-- Email -->
    <div class="row form-group">
        <div class="col-md-2 col-md-offset-2">
            <label asp-for="@Model.Email"></label>
        </div>
        <div class="col-md-2">
            <input class="form-control" asp-for="@Model.Email" readonly />
        </div>
    </div>



    <!-- File -->
    <div class="row form-group">
        <div class="col-md-2 col-md-offset-2">
            <label asp-for="CvFile"></label>
        </div>
        <div class="col-md-2">
            <input asp-for="CvFile" type="file" accept=".pdf, .doc, .docx" />
        </div>
        <div class="col-md-4">
            <span asp-validation-for="CvFile" class="text-danger"></span>
        </div>
    </div>

    <div class="row form-group">
        <div class="col-md-2 col-md-offset-4">
            <button class="link-like-button" asp-controller="Candidate" asp-action="UpdateAdd" asp-route-candidateDto="@Model">Add</button>
            @*<button type="submit" class="link-like-button">Add</button>*@
        </div>
    </div>
</form>